<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.tinsaye.decisionmaker.CoinToss"
    android:background="#ff3fa4ff">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Main Menu"
        android:id="@+id/mainMenu"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:background="#ff000000"
        android:textColor="#fffff9fb" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/coin1"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="false"
        android:layout_above="@+id/textAns2" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Flip Coin"
        android:id="@+id/flip"
        android:textColor="#fffff9fb"
        android:background="#ff000000"
        android:layout_marginBottom="33dp"
        android:layout_above="@+id/mainMenu"
        android:layout_alignLeft="@+id/mainMenu"
        android:layout_alignStart="@+id/mainMenu" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/textAns2"
        android:textColor="#ff000000"
        android:layout_above="@+id/flip"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="17dp" />
</RelativeLayout>
