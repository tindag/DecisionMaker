<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.tinsaye.decisionmaker.DecisionMakerScreen3"
    android:background="#ff3fa4ff">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Please Wait"
        android:id="@+id/textLoad"
        android:textColor="#ff000000"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="96dp"
        android:layout_marginStart="96dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/textDot1"
        android:layout_alignTop="@+id/textLoad"
        android:layout_toRightOf="@+id/textLoad"
        android:layout_toEndOf="@+id/textLoad" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/textDot2"
        android:layout_alignTop="@+id/textDot1"
        android:layout_toRightOf="@+id/textDot1"
        android:layout_toEndOf="@+id/textDot1" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/textDot3"
        android:layout_alignTop="@+id/textDot2"
        android:layout_toRightOf="@+id/textDot2"
        android:layout_toEndOf="@+id/textDot2" />

</RelativeLayout>
